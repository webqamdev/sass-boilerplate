{
  "name": "@webqamdev/sass-boilerplate",
  "version": "0.6.0",
  "description": "An opinionated Sass boilerplate",
  "keywords": [
    "sass",
    "scss",
    "boilerplate"
  ],
  "homepage": "https://github.com/webqamdev/sass-boilerplate",
  "bugs": {
    "url": "https://github.com/webqamdev/sass-boilerplate/issues"
  },
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/webqamdev/sass-boilerplate"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "npm run build -- --watch --progress",
    "prettier": "prettier \"src/**/*.js\" \"src/**/*.scss\" \"**/*.md\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:fix": "npm run prettier -- --write",
    "stylelint": "stylelint 'src/scss/**/*.scss'",
    "test": "npm run prettier:check && npm run stylelint"
  },
  "author": "Webqam",
  "devDependencies": {
    "breakpoint-sass": "^2.7.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "css-mqpacker-webpack-plugin": "^0.12.1",
    "fibers": "^5.0.0",
    "fsevents": "^2.3.2",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.3",
    "normalize.css": "^8.0.1",
    "prettier": "^2.2.1",
    "sass": "^1.38.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-no-indistinguishable-colors": "^1.3.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{scss,css}": [
      "stylelint --fix",
      "git add"
    ],
    "*.{js,scss,css,json,html,htm,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "volta": {
    "node": "14.15.4",
    "npm": "7.21.1"
  }
}
